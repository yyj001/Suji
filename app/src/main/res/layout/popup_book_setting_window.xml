<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<TextView-->
            <!--android:id="@+id/setting_book_cancel"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:text="取消"-->
            <!--android:textColor="@color/colorAccent"-->
            <!--android:textSize="20sp" />-->

        <ImageView
            android:id="@+id/setting_book_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"
            />

        <TextView
            android:id="@+id/setting_book_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:clickable="false"
            android:text="保存"
            android:textColor="@color/grey8"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/setting_notebook_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="单词本名"
            android:textSize="30sp"
            app:met_checkCharactersCountAtBeginning="false"
            app:met_errorColor="@color/red"
            app:met_floatingLabel="normal"
            app:met_hideUnderline="false"
            app:met_maxCharacters="30"
            app:met_underlineColor="@color/colorAccent"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/delete"/>
            <TextView
                android:id="@+id/setting_notebook_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 删除单词本"
                android:textColor="@color/red"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>