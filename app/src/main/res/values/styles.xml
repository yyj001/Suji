<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchActivity" parent="AppTheme">
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="NoPopupAnimation" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupAnimationStyle">@null</item>
        <item name="android:duration">0</item>
    </style>

    <!--ResultView-->
    <declare-styleable name="ResultView">
        <!--声明我们的属性，名称为default_size,取值类型为尺寸类型（dp,px等）-->
        <attr name="theme_color" format="color" />
        <attr name="back_color" format="color" />
        <attr name="mType">
            <enum name="TYPE_SUCESS" value="1" />
            <enum name="TYPE_FAILD" value="2" />
            <enum name="TYPE_WARN" value="3" />
        </attr>
        <attr name="ring_width" format="dimension" />
        <attr name="duration" format="integer" />
    </declare-styleable>
</resources>
